{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "analytics": {
                "ClusterId": "analyticsCluster",
                "Match": {
                    "Path": "/sensor.SensorDataSender/{**catch-all}"
                },
                "Transforms": [
                    {
                        "RequestHeader": "Content-Type",
                        "Set": "application/grpc"
                    }
                ]
            },
            "dataCollection": {
                "ClusterId": "dataCluster",
                "Match": {
                    "Path": "/data/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "analyticsCluster": {
                "Destinations": {
                    "destination1": {
                        // Analytics Service
                        "Address": "http://localhost:5220"
                    }
                },
                "HttpRequest": {
                    "Version": "2",
                    "VersionPolicy": "RequestVersionExact"
                }
            },
            "dataCluster": {
                "Destinations": {
                    "destination1": {
                        // Data Collection Service
                        "Address": "http://localhost:5230"
                    }
                }
            }
        }
    }
}
