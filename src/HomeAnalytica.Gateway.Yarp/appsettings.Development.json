{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "dataCollection": {
                "ClusterId": "dataCollectionCluster",
                "Match": {
                    "Path": "/sensor.SensorDataSender/{**catch-all}"
                },
                "Transforms": [
                    {
                        "RequestHeader": "Content-Type",
                        "Set": "application/grpc"
                    }
                ]
            },
            "dataRegistry": {
                "ClusterId": "dataRegistryCluster",
                "Match": {
                    "Path": "/sensor-devices/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "dataCollectionCluster": {
                "Destinations": {
                    "destination1": {
                        // Data Collection Service
                        "Address": "http://localhost:5225"
                    }
                },
                "HttpRequest": {
                    "Version": "2",
                    "VersionPolicy": "RequestVersionExact"
                }
            },
            "dataRegistryCluster": {
                "Destinations": {
                    "destination1": {
                        // Data Registry Service
                        "Address": "http://localhost:5230"
                    }
                }
            }
        }
    },
    "Kestrel": {
        "Endpoints": {
            // separate ports for HTTP/1.1 and HTTP/2 or use TLS
            "Http": {
                "Url": "http://0.0.0.0:5210",
                "Protocols": "Http1"
            },
            "Grpc": {
                "Url": "http://0.0.0.0:5215",
                "Protocols": "Http2"
            }
        }
    }
}
