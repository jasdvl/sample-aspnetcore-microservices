{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "analytics": {
                "ClusterId": "analyticsCluster",
                "Match": {
                    "Path": "/sensor.SensorDataSender/{**catch-all}"
                },
                "Transforms": [
                    {
                        "RequestHeader": "Content-Type",
                        "Set": "application/grpc"
                    }
                ]
            },
            "dataCollection": {
                "ClusterId": "dataCluster",
                "Match": {
                    "Path": "/data/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "analyticsCluster": {
                "Destinations": {
                    "destination1": {
                        // Analytics Service
                        "Address": "http://homeanalytica.analytics:8082"
                    }
                },
                "HttpRequest": {
                    "Version": "2",
                    "VersionPolicy": "RequestVersionExact"
                }
            },
            "dataCluster": {
                "Destinations": {
                    "destination1": {
                        // Data Collection Service
                        "Address": "http://homeanalytica.datacollection:8080"
                    }
                }
            }
        }
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:8080",
                "Protocols": "Http1"
            },
            "Grpc": {
                "Url": "http://0.0.0.0:8082",
                "Protocols": "Http2"
            }
        }
    }
}
